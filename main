-- Referință la caracterul jucătorului
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Functie pentru schimbarea culorii
local function changeColor()
    local randomColor = Color3.new(math.random(), math.random(), math.random())  -- Creează o culoare aleatorie
    character.Head.BrickColor = BrickColor.new(randomColor)  -- Schimbă culoarea capului
    character.Torso.BrickColor = BrickColor.new(randomColor)  -- Schimbă culoarea torsului
    -- Schimbă culoarea altor părți ale corpului dacă este necesar
end

-- Detectează apăsarea tastei "E"
game:GetService("UserInputService").InputBegan:Connect(function(input, processed)
    if not processed then
        if input.KeyCode == Enum.KeyCode.E then  -- Dacă jucătorul apasă "E"
            changeColor()  -- Schimbă culoarea
        end
    end
end)
